
## create and print a sequence based on 3n+1 

n = int(input("choose Your N: "))

stopping_time = 0
plotted_points = []

while n != 1:
    plotted_points.append(n)
    if (n % 2) == 0:
        n = n/2
    else:
        n = (3*n) + 1
    stopping_time +=1
plotted_points.append(n)
print(plotted_points)
print("number of plotted points in this sequence: " + str(len(plotted_points)))



